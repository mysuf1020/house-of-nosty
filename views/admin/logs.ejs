<%- include('../partials/header') %>

<div class="admin-wrapper d-flex">
    <%- include('../partials/admin-sidebar', { activeMenu: 'logs' }) %>
    
    <main class="admin-content flex-grow-1 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0"><i class="fas fa-history me-2"></i>Log Aktivitas</h4>
        </div>
        
        <!-- Filters -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form method="GET" class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Tanggal</label>
                        <input type="date" name="date" class="form-control" value="<%= filters.date || new Date().toISOString().split('T')[0] %>">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">User</label>
                        <select name="user_id" class="form-select">
                            <option value="">Semua User</option>
                            <% users.forEach(u => { %>
                            <option value="<%= u.id %>" <%= filters.user_id == u.id ? 'selected' : '' %>><%= u.full_name %> (<%= u.role %>)</option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-filter me-1"></i>Filter</button>
                        <a href="/admin/logs" class="btn btn-outline-secondary">Reset</a>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Logs Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="180">Waktu</th>
                                <th width="150">User</th>
                                <th width="120">Aksi</th>
                                <th>Deskripsi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% logs.forEach(log => { %>
                            <tr>
                                <td><%= new Date(log.created_at).toLocaleString('id-ID') %></td>
                                <td>
                                    <strong><%= log.full_name %></strong>
                                    <br><small class="text-muted text-capitalize"><%= log.role %></small>
                                </td>
                                <td>
                                    <% if (log.action === 'LOGIN') { %>
                                    <span class="badge bg-success">LOGIN</span>
                                    <% } else if (log.action === 'LOGOUT') { %>
                                    <span class="badge bg-secondary">LOGOUT</span>
                                    <% } else if (log.action === 'UPDATE_STATUS') { %>
                                    <span class="badge bg-info">UPDATE STATUS</span>
                                    <% } else if (log.action === 'ADD_USER') { %>
                                    <span class="badge bg-primary">TAMBAH USER</span>
                                    <% } else if (log.action === 'EDIT_USER') { %>
                                    <span class="badge bg-warning text-dark">EDIT USER</span>
                                    <% } else if (log.action === 'DELETE_USER') { %>
                                    <span class="badge bg-danger">HAPUS USER</span>
                                    <% } else { %>
                                    <span class="badge bg-dark"><%= log.action %></span>
                                    <% } %>
                                </td>
                                <td><%= log.description %></td>
                            </tr>
                            <% }) %>
                            <% if (logs.length === 0) { %>
                            <tr><td colspan="4" class="text-center text-muted py-4">Tidak ada log aktivitas</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
