<%- include('../partials/header') %>

<div class="admin-wrapper d-flex">
    <%- include('../partials/admin-sidebar', { activeMenu: 'reports' }) %>
    
    <main class="admin-content flex-grow-1 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0">Laporan Penjualan</h4>
        </div>
        
        <!-- Date Filter -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form method="GET" class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Dari Tanggal</label>
                        <input type="date" name="start_date" class="form-control" value="<%= filters.start_date || '' %>">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Sampai Tanggal</label>
                        <input type="date" name="end_date" class="form-control" value="<%= filters.end_date || '' %>">
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-filter me-1"></i>Filter</button>
                        <a href="/admin/reports" class="btn btn-outline-secondary">Hari Ini</a>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Summary Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-success text-white">
                    <div class="card-body text-center">
                        <h6>Total Pendapatan</h6>
                        <h2 class="fw-bold">Rp <%= summary.total_revenue.toLocaleString('id-ID') %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-primary text-white">
                    <div class="card-body text-center">
                        <h6>Total Pesanan</h6>
                        <h2 class="fw-bold"><%= summary.total_orders %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-info text-white">
                    <div class="card-body text-center">
                        <h6>Rata-rata Transaksi</h6>
                        <h2 class="fw-bold">Rp <%= Math.round(summary.avg_order_value).toLocaleString('id-ID') %></h2>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row g-4">
            <!-- Top Products -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white"><h6 class="fw-bold mb-0">Menu Terlaris</h6></div>
                    <div class="card-body p-0">
                        <table class="table mb-0">
                            <thead class="table-light">
                                <tr><th>Menu</th><th>Terjual</th><th>Pendapatan</th></tr>
                            </thead>
                            <tbody>
                                <% topProducts.forEach((p, i) => { %>
                                <tr>
                                    <td><span class="badge bg-warning text-dark me-2"><%= i + 1 %></span><%= p.name %></td>
                                    <td><%= p.total_sold %></td>
                                    <td>Rp <%= p.revenue.toLocaleString('id-ID') %></td>
                                </tr>
                                <% }) %>
                                <% if (topProducts.length === 0) { %>
                                <tr><td colspan="3" class="text-center text-muted">Belum ada data</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <!-- Orders by Status -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white"><h6 class="fw-bold mb-0">Pesanan per Status</h6></div>
                    <div class="card-body">
                        <% ordersByStatus.forEach(s => { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-capitalize"><%= s.status %></span>
                            <span class="badge bg-secondary"><%= s.count %></span>
                        </div>
                        <% }) %>
                        <% if (ordersByStatus.length === 0) { %>
                        <p class="text-muted text-center mb-0">Belum ada data</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
