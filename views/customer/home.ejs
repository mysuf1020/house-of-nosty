<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<!-- Hero Section -->
<section class="hero-section d-flex align-items-center" style="min-height: 100vh; background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/images/hero-bg.jpg') center/cover;">
    <div class="container text-center text-white">
        <h1 class="display-3 fw-bold mb-3"><%= company.name || 'House of Nosty' %></h1>
        <p class="lead mb-4"><%= company.tagline || 'Your Cozy Coffee Destination' %></p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="/menu" class="btn btn-warning btn-lg px-5">
                <i class="fas fa-book-open me-2"></i>Lihat Menu
            </a>
            <a href="/about" class="btn btn-outline-light btn-lg px-5">
                <i class="fas fa-info-circle me-2"></i>Tentang Kami
            </a>
        </div>
    </div>
</section>

<!-- About Preview Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="/images/about-preview.jpg" alt="About House of Nosty" class="img-fluid rounded-3 shadow">
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3">Selamat Datang di <span class="text-warning">House of Nosty</span></h2>
                <p class="text-muted mb-4">
                    <%= company.description || 'House of Nosty adalah coffee shop yang menghadirkan pengalaman ngopi yang nyaman dan memorable. Dengan konsep modern dan menu berkualitas, kami siap menemani hari-harimu.' %>
                </p>
                <div class="row g-3">
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-warning text-dark rounded-circle p-3 me-3">
                                <i class="fas fa-coffee"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">Kopi Premium</h6>
                                <small class="text-muted">Biji kopi pilihan</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-warning text-dark rounded-circle p-3 me-3">
                                <i class="fas fa-wifi"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">Free WiFi</h6>
                                <small class="text-muted">Internet cepat</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-warning text-dark rounded-circle p-3 me-3">
                                <i class="fas fa-couch"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">Tempat Nyaman</h6>
                                <small class="text-muted">Suasana cozy</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-warning text-dark rounded-circle p-3 me-3">
                                <i class="fas fa-qrcode"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">Self Order</h6>
                                <small class="text-muted">Pesan via HP</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Menu Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Menu <span class="text-warning">Favorit</span></h2>
            <p class="text-muted">Pilihan menu terbaik dari kami</p>
        </div>
        
        <div class="row g-4">
            <% products.forEach(product => { %>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm menu-card">
                    <div class="card-img-wrapper">
                        <img src="/uploads/menu/<%= product.image %>" class="card-img-top" alt="<%= product.name %>" 
                             onerror="this.src='/images/default-menu.jpg'">
                        <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">
                            <%= product.category_name %>
                        </span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold"><%= product.name %></h5>
                        <p class="card-text text-muted small"><%= product.description ? product.description.substring(0, 60) + '...' : '' %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-warning mb-0">Rp <%= product.price.toLocaleString('id-ID') %></span>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        
        <div class="text-center mt-5">
            <a href="/menu" class="btn btn-warning btn-lg px-5">
                <i class="fas fa-book-open me-2"></i>Lihat Semua Menu
            </a>
        </div>
    </div>
</section>

<!-- How to Order Section -->
<section class="py-5 bg-dark text-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Cara <span class="text-warning">Pesan</span></h2>
            <p class="text-muted">Pesan menu favoritmu dengan mudah</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-3 text-center">
                <div class="step-icon bg-warning text-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="fas fa-qrcode fa-2x"></i>
                </div>
                <h5>1. Scan QR Code</h5>
                <p class="text-muted small">Scan QR Code yang ada di meja</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="step-icon bg-warning text-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="fas fa-hand-pointer fa-2x"></i>
                </div>
                <h5>2. Pilih Menu</h5>
                <p class="text-muted small">Pilih menu dan varian sesuai selera</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="step-icon bg-warning text-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="fas fa-paper-plane fa-2x"></i>
                </div>
                <h5>3. Kirim Pesanan</h5>
                <p class="text-muted small">Konfirmasi dan kirim pesananmu</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="step-icon bg-warning text-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="fas fa-mug-hot fa-2x"></i>
                </div>
                <h5>4. Nikmati!</h5>
                <p class="text-muted small">Tunggu pesanan diantar ke meja</p>
            </div>
        </div>
    </div>
</section>

