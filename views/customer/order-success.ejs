<%- include('../partials/header') %>

<main class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow text-center">
                    <div class="card-body p-5">
                        <div class="success-icon mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
                        </div>
                        
                        <h2 class="fw-bold mb-3">Pesanan Berhasil!</h2>
                        <p class="text-muted mb-4">Terima kasih, <%= customerName %>! Pesananmu sedang diproses.</p>
                        
                        <div class="bg-light rounded p-4 mb-4">
                            <div class="row text-start">
                                <div class="col-6 mb-3">
                                    <small class="text-muted d-block">Nomor Pesanan</small>
                                    <span class="fw-bold text-warning"><%= orderNumber %></span>
                                </div>
                                <div class="col-6 mb-3">
                                    <small class="text-muted d-block">Nomor Meja</small>
                                    <span class="fw-bold"><%= tableNumber %></span>
                                </div>
                                <div class="col-12">
                                    <small class="text-muted d-block">Total Pembayaran</small>
                                    <span class="fw-bold h4 text-warning">Rp <%= total.toLocaleString('id-ID') %></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-warning mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Mohon tunggu di meja.</strong><br>
                            Pesanan akan diantar setelah selesai. Pembayaran dilakukan di kasir.
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a href="/order/track/<%= orderNumber %>" class="btn btn-outline-warning">
                                <i class="fas fa-search me-2"></i>Lacak Pesanan
                            </a>
                            <a href="/menu" class="btn btn-warning">
                                <i class="fas fa-plus me-2"></i>Pesan Lagi
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
